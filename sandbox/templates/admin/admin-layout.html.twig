{% extends "layout.html.twig" %}

{% block navbar_collapse %}
  <span class="navbar-text">
    admin/admin-layout.html.twig
  </span>
{% endblock navbar_collapse %}

{% block header_extra %}
  <nav id="toolbar" class="navbar py-0 navbar-expand-lg navbar-light bg-white border-bottom">
    <span class="navbar-text py-0">
      toolbar
    </span>
  </nav>
{% endblock header_extra %}

{% block skip_nav_id %}
  {% spaceless %}
    main-content
  {% endspaceless %}
{% endblock skip_nav_id %}

{% block main %}
  <div class="container-fluid">
    <div class="row">
      <div id="toc" class="col-2 order 1 toc">
        {% block toc %}
          <h3>TOC...</h3>
          <h6>** bottom of contect **</h6>
        {% endblock toc %}
      </div>
      <div id="sidebar" class="col-3 order-3 sidebar">
        {% block sidebar %}
          <h3>Sidebar...</h3>
          <h6>** bottom of contect **</h6>
        {% endblock sidebar %}
      </div>
      <div id="main-content" class="col-7 order-2 main-content">
        {% block main_content %}
          <h3>Main content...</h3>
          <h6>** bottom of contect **</h6>
        {% endblock main_content %}
      </div>
  </div>
{% endblock main %}

{% block head_style %}
  {{ parent() }}

  <link rel="stylesheet" href="{{ asset('build/css/admin.css') }}" />
{% endblock head_style %}

{% block foot_script %}
  {{ parent() }}

  <script src="{{ asset('build/js/admin.js') }}"></script>
{% endblock foot_script %}

{% block footer %}
  <div class="container-fluid">
    <div class="row footer-spacer">
    </div>
  </div>
  <footer class="fixed-bottom">
    <nav id="statusbar" class="navbar navbar-expand-lg navbar-light bg-light py-1">
      <span class="navbar-text py-1">
        statusbar
      </span>
    </nav>
  </footer>
{% endblock footer %}
